server {
    listen 443 ssl;
    server_name {{ alterconso_fqdn }} ;

    ssl_certificate     /etc/nginx/certificates/alterconso/cert.pem;
    ssl_certificate_key /etc/nginx/certificates/alterconso/key.pem;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://alterconso-webapp:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}