log:
  filePath: /dev/stdout
  level: DEBUG

global:
  checkNewVersion: false
  sendAnonymousUsage: false

entryPoints:
  web:
    address: :80
    http:
      redirections:
        entrypoint:
          to: websecure
          scheme: https
  websecure:
    address: :443

certificatesResolvers:
  myresolver:
    acme:
      email: guillaume.penad@gmail.com
      caServer: "https://acme-staging-v02.api.letsencrypt.org/directory"
      storage: acme.json
      httpChallenge:
        entryPoint: web

api:
  insecure: true
  dashboard: true

providers:
  docker:
    exposedByDefault: false
    endpoint: unix:///var/run/docker.sock
    watch: true
  file:
    filename: "/dynamic.yml"
